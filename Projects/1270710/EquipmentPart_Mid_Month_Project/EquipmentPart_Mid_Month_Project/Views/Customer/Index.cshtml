@model IEnumerable<EquipmentPart_Mid_Month_Project.Models.Customer>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-12">
        <h3 style="text-align:center; color:crimson">List of the Customer</h3>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Create New Customer", "Create", "Customer", new { }, new { @class = "btn btn-primary" })
        </div>
        <table class="table table-bordered">
            <thead class="table-danger">
                <tr style="vertical-align: middle; color:darkmagenta">
                    <th>Customer Name</th>
                    <th>Age</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Equipment</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr id="tr_@p.CustomerId" style="vertical-align:middle">
                        <td>@p.CustomerName</td>
                        <td>@p.Age</td>
                        <td>@p.City</td>
                        <td>@p.Country</td>
                        <td>@p.Phone</td>
                        <td>@p.Email</td>
                        <td>@p.Equipment.EquipmentName</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Customer", new { id = p.CustomerId }, new { @class = "btn btn-outline-secondary" })
                            @Ajax.ActionLink("Delete", "Delete", "Customer", new { id = p.CustomerId }, new AjaxOptions { Confirm = "Are youre to delele?", HttpMethod = "Post", OnSuccess = "onSuccess" }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        function onSuccess(r) {
            console.log(r);
            $("#tr_" + r).remove();
        }
    </script>
}



