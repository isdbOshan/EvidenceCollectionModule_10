@model Hospital_Managemnt_Project_01.ViewModels.BillInputModel
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-12">
        <h4>Create New Bill</h4>
        @using (Html.BeginForm("Create", "Bills", FormMethod.Post))
        {
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.BillDate, new { @class = "col-form-lable col-2" })
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x => x.BillDate, new { @class = "form-control date" })
                @Html.ValidationMessageFor(x => x.BillDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.SeatRent, new { @class = "col-form-lable col-2" })
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x => x.SeatRent, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SeatRent, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.OtherCharge, new { @class = "col-form-lable col-2" })
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x => x.OtherCharge, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.OtherCharge, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.PatientId, new { @class = "col-form-lable col-2" })
            </div>
            <div class="col-4">
                @Html.DropDownListFor(x => x.PatientId, new SelectList(ViewBag.patients, "PatientId", "PatientName"), "Select", new { @class = "form-select" })
                @Html.ValidationMessageFor(x => x.PatientId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row mb-1">

            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </div>
        }
    </div>
</div>

@section styles{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(".date").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>
}
