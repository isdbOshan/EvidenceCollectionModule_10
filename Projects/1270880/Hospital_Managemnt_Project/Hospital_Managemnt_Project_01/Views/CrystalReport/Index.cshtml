@model IEnumerable<Hospital_Managemnt_Project_01.Models.Doctor>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h3>Candidates</h3>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th></th>
                    <th>Doctor Name</th>
                    <th>Date of birth</th>
                    <th>Doctor Fee</th>
                    <th>IsAvaliable?</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr id="tr_@c.DoctorId" style="vertical-align:middle">
                        <td>
                            <img class="rounded-circle" src="~/Uploads/@c.Picture" style="width:40px" />
                        </td>
                        <td>@c.DoctorName</td>
                        <td>@c.BirthDate.ToString("yyyy-MM-dd")</td>
                        <td>@c.DoctorFee</td>
                        <td>@c.IsAvaliable</td>
                        <td>@(c.IsAvaliable ? "Yes": "No")</td>

                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="col-12 text-center">
        @Html.ActionLink("To PDF", "DoctorPDF", "CrystalReport", new { }, new { @class = "btn btn-primary btn-sm" })
    </div>
</div>

