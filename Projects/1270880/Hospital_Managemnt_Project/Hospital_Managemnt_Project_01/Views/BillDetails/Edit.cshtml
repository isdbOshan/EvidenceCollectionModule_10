@model Hospital_Managemnt_Project_01.ViewModels.BillDetailEditModel
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-12">
        <h4>Create New Bill Details</h4>
        @using (Html.BeginForm("Edit", "BillDetails", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.BillDetailId)
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Advance, new { @class = "col-form-lable col-2" })
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x => x.Advance, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Advance, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.HealthCard, new { @class = "col-form-lable col-2" })
            </div>
            <div class="col-4">
                @Html.CheckBoxFor(x => x.HealthCard)
            </div>

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.BillId, new { @class = "col-form-lable col-2" })
            </div>
            <div class="col-4">
                @Html.DropDownListFor(x => x.BillId, new SelectList(ViewBag.Bill, "BillId", "BillId"), "Select", new { @class = "form-select" })
                @Html.ValidationMessageFor(x => x.BillId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row mb-1">
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary btn-sm">Update</button>
            </div>
        }
    </div>
</div>


@section scripts{
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

