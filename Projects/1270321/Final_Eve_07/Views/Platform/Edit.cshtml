@model Final_Eve_07.Models.Platform
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Edit", "Platform", FormMethod.Post))
        {
            @Html.HiddenFor(x=>x.PlatformId)
            <h2>Edit</h2>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Chipset, new { @class = "col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Chipset, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Chipset, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.CPU, new { @class = "col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.CPU, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CPU, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.GPU, new { @class = "col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.GPU, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.GPU, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x=>x.AdditionalFeatureId, new {@class="col-form-label"})
                <div class="col-md-10">
                    @Html.DropDownListFor(x=>x.AdditionalFeatureId, new SelectList(ViewBag.AdditionalFeature, "AdditionalFeatureId", "Sensors"), "Select One", new {@class="form-select"})
                    @Html.ValidationMessageFor(x=>x.AdditionalFeatureId, "", new {@class="text-danger"})
                </div>
            </div>
            <div>
                <button type="submit" class=" btn btn-success">Update</button>
            </div>
        }
    </div>
    @Html.ActionLink("Back to list", "Index");
</div>
@section styles{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts{

    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(".date").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>
}
