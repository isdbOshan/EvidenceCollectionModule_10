@model  Final_Eve_07.ViewModels.PhoneEditModel
@for (var i = 0; i < Model.SpeciFications.Count; i++)
{
    <div class="col-3">
        <label>Company Name</label>
        @Html.TextBoxFor(x => Model.SpeciFications[i].CompanyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.SpeciFications[i].CompanyName, "", new { @class = "text-danger" })
    </div>
    <div class="col-3">
        <label>Camera</label>
        @Html.TextBoxFor(x => Model.SpeciFications[i].Camera, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.SpeciFications[i].Camera, "", new { @class = "text-danger" })
    </div>
    <div class="col-3">
        <label>Display</label>
        @Html.TextBoxFor(x => Model.SpeciFications[i].Display, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.SpeciFications[i].Display, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>RAM</label>
        @Html.TextBoxFor(x => Model.SpeciFications[i].RAM, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.SpeciFications[i].RAM, "", new { @class = "text-danger" })
    </div>
    <div class="col-1">

        <button class="btn btn-warning btn-sm mt-4 del" data-index="@i" type="button">Remove</button>
    </div>
}




