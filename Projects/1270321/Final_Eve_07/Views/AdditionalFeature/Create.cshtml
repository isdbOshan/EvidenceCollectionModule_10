@model Final_Eve_07.Models.AdditionalFeature
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Create", "AdditionalFeature", FormMethod.Post))
        {
            <h2>Create</h2>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Sensors, new { @class = "col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Sensors, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Sensors, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Battery, new { @class = "col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Battery, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Battery, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.VideoSupport, new { @class = "col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.VideoSupport, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.VideoSupport, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.SpeciFicationId, new { @class = "col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.SpeciFicationId, new SelectList(ViewBag.SpeciFication, "SpeciFicationId", "CompanyName"), "Select One", new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.SpeciFicationId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <button type="submit" class=" btn btn-success">Save</button>
            </div>
        }
    </div>
    @Html.ActionLink("Back to list", "Index");
</div>
@section styles{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts{

    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(".date").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>
}