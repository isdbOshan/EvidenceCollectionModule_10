@model  CarPartsDetailsInformations.ViewModel.InputViewModel
@for (var i = 0; i < Model.Customer.Count; i++)
{
    <div class="col-2">
        <label>Customer Name</label>
        @Html.TextBoxFor(x => Model.Customer[i].CustomerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Customer[i].CustomerName, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>Phone</label>
        @Html.TextBoxFor(x => Model.Customer[i].Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Customer[i].Phone, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>Email</label>
        @Html.TextBoxFor(x => Model.Customer[i].Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Customer[i].Email, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>Address</label>
        @Html.TextBoxFor(x => Model.Customer[i].Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Customer[i].Address, "", new { @class = "text-danger" })
    </div>


    <div class="col-1">

        <button class="btn btn-warning btn-sm mt-4 del" data-index="@i" type="button">Remove</button>
    </div>
}

