<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
@RenderSection("styles",false)
<style> 
    body{
       
        padding-top:70px;
    }
</style>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-warning fixed-top shadow-sm">
        <div class="container">
            <span class="navbar-brand">IT_Scholarship</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="nav">
                <ul class="navbar-nav  me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("MasterDetails", "Index", "MasterDetails", new { }, new { @class = "nav-link" })
                        @*<a href="~/Views/Shared/_Layout.cshtml">~/Views/Shared/_Layout.cshtml</a>*@
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Example
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                @Html.ActionLink("Trainee", "Index", "Trainee", new { }, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Module", "Index", "Module", new { }, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Exam", "Index", "Exam", new { }, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("ExamResults", "Index", "ExamResults", new { }, new { @class = "nav-link" })
                            </li>
                        </ul>

                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Reports
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                @Html.ActionLink("Report1", "ModuleReports", "Reports", new { }, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Report2", "TraineeReport", "Reports", new { }, new { @class = "nav-link" })
                            </li>
                        </ul>
                    </li>
                        </ul>
                        <ul class="navbar-nav  ms-auto">
                            @if (Request.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Login", "Login", "Account", new { }, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
                                </li>
                            }

                        </ul>
</div>
        </div>
    </nav>
    <main class="container  $cyan-500" style="min-height:calc(100vh - 145px) ">
        @RenderBody()
    </main>

    <hr />
    <footer class="container-fluid bg-success">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>