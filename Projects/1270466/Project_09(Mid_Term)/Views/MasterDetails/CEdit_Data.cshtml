@model  Project_09_Mid_Term_.Models.Computer
@for (var i = 0; i < Model.OrderItems.Count; i++)
{
    <div class="col-4">
        <label>Quantity</label>
        @Html.TextBoxFor(x => Model.OrderItems[i].Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.OrderItems[i].Quantity, "", new { @class = "text-danger" })
    </div>
    

    <div class="col-2">

        <button class="btn btn-danger btn-sm mt-4" data-index="@i" type="button">Remove</button>
    </div>
}

