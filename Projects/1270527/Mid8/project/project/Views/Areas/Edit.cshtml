@model project.Models.Area
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="container col-12">
        <h3>Edit Area</h3>

    </div>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(a => a.AreaId)
        <div class="from-group row mb-2">

            @Html.LabelFor(a => a.Locations, new { @class = "col-form-label col-2" })
            <div class="col-4">
                @Html.TextBoxFor(a => a.Locations, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Locations, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="from-group row mb-2">
            <div class="col-6 offset-2">
                <button type="submit" class="btn btn-primary" id="save">Save</button>
            </div>

        </div>
    }
    <div class="col-12">
        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-success" })
    </div>
</div>

