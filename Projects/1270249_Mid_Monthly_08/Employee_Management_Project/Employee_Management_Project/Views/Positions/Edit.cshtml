@model Employee_Management_Project.ViewModels.PositionEditModel
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-12">
        <h3>Create new Position</h3>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x=>x.PositionID)
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.EmployeeID, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.DropDownListFor(x => x.EmployeeID, new SelectList(ViewBag.Employees, "EmployeeID", "EmployeeName"), "Select One", new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.EmployeeID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.DailyRate, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.DropDownListFor(x => x.DailyRate, ViewBag.DailyRateList as IEnumerable<SelectListItem>, new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.DailyRate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.WorkingDaysPerMonth, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.WorkingDaysPerMonth, new { @class = "form-control", @type = "number" })
                    @Html.ValidationMessageFor(x => x.WorkingDaysPerMonth, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        }
    </div>
    <div class="col-12">
        @Html.ActionLink("Back to List", "Index", "Positions", new { }, new { @class = "btn btn-success btn-sm" })
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}

