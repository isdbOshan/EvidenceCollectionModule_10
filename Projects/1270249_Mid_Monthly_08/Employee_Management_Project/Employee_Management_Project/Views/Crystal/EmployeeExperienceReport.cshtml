@model IEnumerable<Employee_Management_Project.ViewModels.EmployeeExperienceReportModel>
@{
    ViewBag.Title = "EmployeeExperienceReport";
}
<div class="row">
    <div class="col-12">
        <h2 style="text-align:center; color:crimson">Employee Experiences</h2>

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="table-dark">Employee Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var g in Model.GroupBy(x => x.EmployeeName).ToList())
                {
                    <tr style="vertical-align:middle">
                        <td>@g.Key</td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td colspan="8">
                            <h3 style="text-align:center; color:crimson">Experiences of the Employees</h3>
                            <table class=" table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Designation</th>
                                        <th>Experience Year</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ex in g)
                                    {
                                        <tr>
                                            <td>@ex.CompanyName</td>
                                            <td>@ex.Designation</td>
                                            <td>@ex.ExperienceYear</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-lg-start mb-1">
        @Html.ActionLink("Employee Experiences Pdf Download", "EmployeeExperiencePDF", "Crystal", new { }, new { @class = "btn btn-warning" })&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        @Html.ActionLink("Employee Experiences Excel Download", "EmployeeExperienceExcel", "Crystal", new { }, new { @class = "btn btn-warning" })
    </div>
</div>



