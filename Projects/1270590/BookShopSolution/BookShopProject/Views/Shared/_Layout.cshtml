<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 70px;
        }
        .img {
            width: 60px;
            height: 60px;
        }

        .list {
            display: flex;
            flex-direction: row;
        }

        .item {
            margin: 10px;
            padding: 5px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar bg-white navbar-expand-md fixed-top shadow-sm border-bottom">
        <div class="container-fluid">
            <span class="navbar-brand">ART BOOKS</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("MasterDatil", "Index", "Books", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Publishers", "Index", "Publishers", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Authors", "Index", "Authors", new { }, new { @class = "nav-link" })</li>
                    <li>
                        <a class="nav-link" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                            Reports
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Securities", new { }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Securities", new { }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Securities", new { }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <ul class="navbar-nav bg-light list">
                <li class="nav-item item">@Html.ActionLink("PublisherRrt", "Publisher", "Reports", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item item">@Html.ActionLink("ReportWithPicture", "Authors", "Reports", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item item">@Html.ActionLink("AllTable", "AllTable", "Reports", new { }, new { @class = "nav-link" })</li>
               
            </ul>
        </div>
    </div>
    <main class="container-fluid">
        @RenderBody()
    </main>

    @RenderSection("scripts", false)
</body>
</html>